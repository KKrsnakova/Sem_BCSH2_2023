<Window x:Class="Sem_BCSH2_2023.View.AddEditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Sem_BCSH2_2023.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Title="AddEditCustomer" Height="600" Width="550">

    <Grid Background="{StaticResource bgAddColor}">
        <Grid.RowDefinitions>
            <!--Nav-->
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <!--Header buttonst-->
        <StackPanel x:Name="navBar"
                                Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="navBar_MouseLeftButtonDown"
                                MouseEnter="navBar_MouseEnter">

            <Button x:Name="btnClose"
                                Style="{StaticResource navBtn}"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="12"
                            Cursor="Hand"
                            Click="btnClose_Click"
                                >
                <fa:IconImage Icon="Xmark" Style="{StaticResource navBtnIcon}"/>
            </Button>

            <Button x:Name="btnMaximal"
                                Style="{StaticResource navBtn}"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"
                            Click="btnMaximal_Click">
                <fa:IconImage Icon="Square" Style="{StaticResource navBtnIcon}"/>
            </Button>

            <Button x:Name="btnMinimal"
                                Style="{StaticResource navBtn}"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"
                            Click="btnMinimal_Click">
                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource navBtnIcon}"/>
            </Button>
        </StackPanel>


        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0,35,0,0">
            <TextBlock  x:Name="windowName"
                        Text="Přidat novou rostlinu"
                        Foreground="{StaticResource textColor1}"
                        FontSize="25"
                        FontWeight="Medium"
                        HorizontalAlignment="Center">

            </TextBlock>

            <!--TextBoxes-->
            <TextBlock  Style="{StaticResource TextBlockAdd}"
                        Text="Jméno"/>

            <TextBox  x:Name="tbName"
                      Style="{StaticResource TextBoxAdd}">
            </TextBox>

             <TextBlock Style="{StaticResource TextBlockAdd}"
                        Text="Přijmení" />

            <TextBox x:Name="tbSurname"
                     Style="{StaticResource TextBoxAdd}">
            </TextBox>

            <TextBlock Style="{StaticResource TextBlockAdd}"
                       Text="Ulice a číslo popisné " />

            <TextBox x:Name="tbAddress"
                     Style="{StaticResource TextBoxAdd}">
            </TextBox>
            
            <TextBlock  Style="{StaticResource TextBlockAdd}"
                    Text="Město + PSČ "/>

            <TextBox Style="{StaticResource TextBoxAdd}"
                     x:Name="tbCity">
            </TextBox>

            <TextBlock  Style="{StaticResource TextBlockAdd}"
                        Text="Telefonní číslo"  />

            <TextBox Style="{StaticResource TextBoxAdd}"
                     x:Name="tbPhoneNumber">
            </TextBox>

            <TextBlock  Style="{StaticResource TextBlockAdd}"
                        Text="E-mailová adresa"/>

            <TextBox Style="{StaticResource TextBoxAdd}"
                    x:Name="tbEmail">
            </TextBox>

            <Button Content="Přidat"
                    Name="btnAdd"
                    FontSize="12"
                    Cursor="Hand"
                    BorderThickness="0"
                    Foreground="White"
                    Margin="40,0,40,0"
                    VerticalAlignment="Top" Click="BtnAdd_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#773DFF"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Height="30"
                                            CornerRadius="15"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#836EFB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>





        </StackPanel>
    </Grid>
</Window>
